{
  "name": "dialogue-research",
  "version": "0.1.0",
  "private": false,
  "description": "Dialogue-Research: Telegram-based conversational research for papers and development workflows",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "start:daemon": "node dist/daemon.js",
    "dev": "tsx src/index.ts",
    "dev:daemon": "tsx src/daemon.ts",
    "daemon:autostart": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/setup-autostart.ps1",
    "daemon:start": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/daemon-run.ps1",
    "daemon:stop": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/stop-daemon.ps1",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "better-sqlite3": "^11.8.1",
    "pdf-parse": "^1.1.1",
    "undici": "^6.20.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.13.1",
    "@types/pdf-parse": "^1.1.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
